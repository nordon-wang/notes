/* page1.wxss */

/**/

.left {
  float: left;
}

.right {
  float: right;
}

.clearfix:after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  height: 0;
}

.clearfix {
  zoom: 1;
}

.search-simple {
  height: 44rpx;
  width: 100%;
  background-color: #f1eef5;
}

.search-header {
  width: 100%;
  height: 200rpx;
}

.search-header-top {
  height: 64rpx;
  line-height: 64rpx;
  border-bottom: 1px solid #e3e3e3;
  padding-left: 18rpx;
}

.search-header-btm {
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 2rpx solid #e3e3e3;
  padding-top: 26rpx;
  font-size: 28rpx;
}

.search-header-btm .search-header-btm-l, .search-header-btm .search-header-btm-c,
.search-header-btm .search-header-btm-r {
  width: 33%;
  height: 88rpx;
  line-height: 88rpx;
  border-right: 2rpx solid #e3e3e3;
}

.search-header-btm .search-header-btm-r {
  border-right: 0 solid #e3e3e3;
}

.search-header-btm .search-header-btm-l navigator,
.search-header-btm .search-header-btm-c navigator,
.search-header-btm .search-header-btm-r navigator {
  margin-left: 16rpx;
}

.search-header-btm image {
  width: 88rpx;
  height: 88rpx;
  margin-left: 24rpx;
}

.search-header-btm image.duiHao {
  width: 32rpx;
  height: 32rpx;
  margin-top: 28rpx;
  margin-left: 6rpx;
}

/*客户类型*/

.search-customer-type {
  height: 172rpx;
  padding-left: 18rpx;
  padding-top: 12rpx;
}

.search-customer-type-top {
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 14rpx;
}

.search-customer-type-btm-text {
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #3492e9;
  display: inline-block;
  font-size: 24rpx;
  margin-right: 11px;
  text-align: center;
  border-radius: 12rpx;
  background-color: #e3e3e3;
  color: #3492e9;
}

/*入录时间*/

.search-enroll-type {
  height: 200rpx;
  padding-left: 18rpx;
  padding-top: 12rpx;
}

.search-enroll-type-top {
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 14rpx;
}

.search-enroll-type-btm-text {
  display: inline-block;
  width: 340rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #e3e3e3;
  margin-right: 12px;
  color: #333;
  font-size: 28rpx;
  border-radius: 12rpx;
  text-align: center;
}

/*是否为重点客户*/

.search-key-custom {
  width: 100%;
  height: 300rpx;
  padding-top: 12rpx;
}

.search-key-custom-top {
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 18rpx;
}

.search-key-custom-btm {
  height: 106rpx;
  line-height: 106rpx;
  border-top: 1px solid #e3e3e3;
}

.search-key-custom-btm image {
  width: 56rpx;
  height: 56rpx;
  margin: 30rpx 30rpx 0 30rpx;
}

.search-btn {
  height: 240rpx;
  line-height: 240rpx;
  background-color: #f1eef5;
}

.search-btn button {
  width: 80%;
  background-color: #387ef5;
}
